<% provide(:title, @recruiter.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <div class="profile_identity">
        <%= gravatar_for_recruiter @recruiter %>
          recruiter
        </div>
        <br/><br/><br/><br/>
        Name:  <%= @recruiter.name %><br/><br/>
        Email:  <%= @recruiter.email %><br/><br/>
        Company: <%= @recruiter.company_id %>
        <% if recruiter?%>
          <% if join_company?%>
             <%= link_to " choose a company", companies_path%>
          <% else %>
            <%= link_to "show", @recruiter.company %>
            | <%= link_to "edit", edit_company_path(@recruiter.company)%>
            | <%= link_to("quit", update_company_id_recruiter_path(current_user,:real_company_id=>nil), :method => :post,
                          data:{:confirm => "Quit this company?"})%>
          <% end %>
        <% end %>
      </h1>
    </section>
  </aside>
</div>