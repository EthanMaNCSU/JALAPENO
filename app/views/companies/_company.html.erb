<li>
  <%= gravatar_for_company company, size: 50 %>
  <%= link_to company.name, company %>

  <% if admin?%>
    | <%= link_to "edit", edit_company_path(company)%>
  <% end %>

  <% if admin?%>
    | <%= link_to "delete", company, method: :delete,
                  data: { confirm: "You sure?" } %>
  <% end %>
  <% if recruiter?&&join_company?%>
    | <%= link_to("join", update_company_id_recruiter_path(current_user,:real_company_id=>company.id), :method => :post,
                  data:{:confirm => "Join this company?"})%>
  <% end %><br/>
  <span class="job"><span style="display:inline-block; width:20px"></span>Company id: <%=company.id %></span>
</li>